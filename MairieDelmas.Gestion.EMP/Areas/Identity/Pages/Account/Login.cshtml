@page
@model LoginModel

@{
    ViewData["Title"] = "Se Connecter";
}



<img src="~/pexels-eberhard-grossgasteiger-572897.jpg" height="679" class=" pt-1 card-img" alt="Alternate Text" />
<div class="card-img-overlay pt-5">
    <div class="container pt-4">
        <div class="row">   </div>
        <div class="row pt-5 ">

            <div class="col-md-3">   </div>
            <div class="col-6 bg-white pt-2">
                <div class="row">


                    <div class="col-6 table-bordered p-3 ">

                        <section>
                            <h3 class="text-center pb-5">Connexion au Systeme</h3>
                            <form id="account" method="post">
                                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                                <div class="form-group">

                                    <input asp-for="Input.Email" placeholder="Entrer votre Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">

                                    <input asp-for="Input.Password" placeholder="Entrer Votre Motpasse" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe">
                                            <input asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <button type="submit" class="btn btn-primary mx-auto col-6 justify-content-center">Connexion</button>
                                </div>

                                <!--<div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Vous avez Oublie votre Mot de passe?</a>
                            </p>-->
                                @*<p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p>*@
                                <!--</div>-->
                            </form>
                            <hr />
                            <div class="  d-flex flex-row justify-content-center">
                                <a href="#">  <img class=" btn btn-outline-primary border-0 p-2" src="~/facebook.svg" alt="Alternate Text" /></a>
                                <a href="#">  <img class=" btn btn-outline-primary border-0 p-2" src="~/whatsapp.svg" alt="Alternate Text" /></a>
                                <a href="#"> <img class=" btn btn-outline-primary border-0 p-2" src="~/youtube.svg" alt="Alternate Text" /></a>
                                <a href="#"> <img class="btn btn-outline-primary border-0 p-2" src="~/instagram.svg" alt="Alternate Text" /></a>
                            </div>

                        </section>
                    </div>
                    <div class="col-6">
                        <img src="~/MD logo png copy.png" width="200" alt="Alternate Text" />
                    </div>
                </div>

            </div>


        </div>
  
    
    </div>
</div>











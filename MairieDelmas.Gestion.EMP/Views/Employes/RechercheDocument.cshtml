@model IEnumerable<MairieDelmas.Gestion.EMP.Models.Employe.Employe>

@{
    ViewData["Title"] = "RechercheInfoPersonel";
}




<div class=" bg-primary text-uppercase text-white shadow">
    <img src="~/MD logo png copy.png" width="60" alt="Alternate Text" />  <h2 class="d-inline">Employes Mairie de Delmas</ </h2>
</div>
 
<div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link " aria-current="page" asp-action="Recherche">Information Personelles</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="RechercheEmployeActif">Informations Complementaires</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-action="AutreInformation">Autres Informations</a>
        </li>
        <li class="nav-item">
            <a class="nav-link  active" asp-action="RechercheDocument">Documents de Dossiers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Promotions" asp-action="ListePromotion">Promotion</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-action="ListeEmployeInActif">Changement d'Etat</a>
        </li>
    </ul>
</div>

<div class="row  mt-2 ">
    <div class="col-md-8 ml-3">
        <form asp-action="RechercheInfoPersonel" method="get">
            <div class="input-group">
                <input type="text" name="Recherche" class="form-control col-4 pl-4 " placeholder="Recherche..." />
                <button type="submit" class="btn btn btn-outline-light border-0 " value="Filter"> <img src="~/search.svg" alt="Alternate Text" /></button>
            </div>
        </form>
    </div>

</div>

<fieldset class="border  border-primary pt-2 overflow-auto  " style="height:450px">
    <legend class="w-auto text-primary"> <a asp-action="Create" class="btn btn-outline-light border-0"><img style="width:40px" src="~/person-plus.svg" alt="Alternate Text" /> </a></legend>
    
    <div>
        <table class="table  table-striped  table-sm table-hover">
            <thead class=" table-primary text-center">
                <tr style="font-size:small">


                    <th>
                        @Html.DisplayNameFor(model => model.Nom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prenom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Emploi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Service)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CarteIdentification)
                    </th>
                    <th>

                        @Html.DisplayNameFor(model => model.CV)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PermisConduire)
                    </th>


                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="font-size:small" class="text-center">

                        <td>
                            @Html.DisplayFor(modelItem => item.Nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prenom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Emploi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Service)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CarteIdentification)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PermisConduire)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CV)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Photo)
                        </td>



                        <td>
                            <a asp-action="EnregistrerDocumentsEmp" asp-route-id="@item.EmployeId"><img src="~/zoom-in.svg" alt="Alternate Text" /></a>
                            <a asp-action="Details" asp-route-id="@item.EmployeId"><img src="~/eye.svg" alt="Alternate Text" /></a>
                            @*<a asp-action="CertificatDeTravail" asp-route-id="@item.EmployeId"><img class="delete" src="~/trash.svg" alt="Alternate Text" /></a>*@

                        </td>
                    </tr>
                }
            </tbody>
        </table>
         
    </div>
</fieldset>
<div class="small ">
    <nav>
        <ul class="pagination justify-content-end">
            <li class="page-item disabled"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </nav>
</div>
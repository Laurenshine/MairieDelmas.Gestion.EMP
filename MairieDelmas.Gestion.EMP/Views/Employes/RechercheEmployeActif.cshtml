@model IEnumerable<MairieDelmas.Gestion.EMP.Models.Employe.Employe>

@{
    ViewData["Title"] = "RechercheEmployeActif";
}

<div class="card-header bg-dark text-uppercase text-white">
    <img src="~/MD logo png copy.png" width="100" alt="Alternate Text" />  <h1>Employes Mairie de Delmas</h1>
</div>

<div class="d-flex mb-1 ">

    <div class="p-2">
        <a asp-action="Create"><img style="width:40px" src="~/person-plus.svg" alt="Alternate Text" /> </a>
    </div>
</div>
<div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" aria-current="page" asp-action="Recherche">Information Personelles</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-action="RechercheEmployeActif">Informations Complementaires</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="AutreInformation">Autres Informations</a>
        </li>
        <li class="nav-item">
            <a class="nav-link"  asp-action="RechercheInfoPersonel">Documents de Dossiers</a>
        </li>
    </ul>
</div>
<br />  
<div class="row ">
    <div class="col-md-8">
        <form asp-action="RechercheEmployeActif" method="get">
            <div class="form-group">
                <input type="text" name="Recherche" placeholder="Recherche..." />
                <button type="submit" value="Filter"> <img src="~/search.svg" alt="Alternate Text" /></button>
            </div>
        </form>
    </div>

</div>
<br />  
<table class="table table-striped ">
    <thead class="table-dark text-center">
        <tr style="font-size:small">

            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emploi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Portable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonneAPrevenir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortablePersonneAPrevenir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Liens)
            </th>
            <th> Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="text-center" style="font-size:small">


            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emploi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Portable)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonneAPrevenir)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PortablePersonneAPrevenir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Liens)
            </td>
            <td>
                <a asp-action="EnregistrerInfoComplementaire" asp-route-id="@item.EmployeId"><img class="search " src="~/zoom-in.svg" alt="Alternate Text" /></a>

                <a asp-action="Details" asp-route-id="@item.EmployeId"><img class="detail" src="~/eye.svg" alt="Alternate Text" /></a>

                <a asp-action="Delete" asp-route-id="@item.EmployeId"><img class="delete" src="~/trash.svg" alt="Alternate Text" /></a>
            </td>
        </tr>
        }
    </tbody>
</table>

@model IEnumerable<MairieDelmas.Gestion.EMP.Models.Employe.Employe>

@{
    ViewData["Title"] = "Recherche";
}


<div class=" bg-primary text-uppercase text-white shadow"  >
    <img src="~/MD logo png copy.png" width="60" alt="Alternate Text" />  <h2 class="d-inline pt-5">Employes Mairie de Delmas</h2>
</div>
<div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-action="Recherche">Information Personelles  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger text-white"> @ViewBag.MaxStorage</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="RechercheEmployeActif">Informations Complementaires  </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="AutreInformation">Autres Informations  </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="RechercheDocument">Documents de Dossiers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Promotions" asp-action="ListePromotion">Promotion</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="ListeEmployeInActif">Changement d'Etat</a>
        </li>
    </ul>
</div> 
<div class="row mt-2 ">
    <div class="col-md-8 ml-3">
        <form asp-action="Recherche" method="get">
            <div class="input-group">
                <input type="text" name="Recherche" class="form-control col-4 " placeholder="Nom , Prenom, Nif/Cin..." />
                <button type="submit" class="btn btn-outline-light border-0" value="Filter">
                    <img src="~/search.svg" alt="Alternate Text" />
                </button>
            </div>
        </form>
    </div>

</div>
  
<fieldset class="border border-primary pt-2 overflow-auto " style="height:450px">
    <legend class="w-auto text-primary"> <a asp-action="Create" class="btn btn-outline-light border-0"><img style="width:40px" src="~/person-plus.svg" alt="Alternate Text" /> </a></legend>
    <div cellspacing="0" cellpadding="0" >
        <table class="table table-striped table-sm table-hover  ">
            <thead class="table-primary text-center">
                <tr style="font-size:small">
                    <th>
                        @Html.DisplayNameFor(model => model.TypeContrat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prenom)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.DateNaissance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LieudeNaissance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PaysdeNaissance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nationalite)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SituationFamiliale)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Adresse)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombrePersaCharge)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreEnfants)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NIFCIN)
                    </th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center" style="font-size:small">
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeContrat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prenom)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DateNaissance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LieudeNaissance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaysdeNaissance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nationalite)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SituationFamiliale)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adresse)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombrePersaCharge)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreEnfants)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NIFCIN)
                        </td>

                        <td>

                            <a asp-action="ModifierInfoPersonnelle" asp-route-id="@item.EmployeId"><img class="search " src="~/zoom-in.svg" alt="Alternate Text" /></a>

                            <a asp-action="Details" asp-route-id="@item.EmployeId"><img class="detail" src="~/eye.svg" alt="Alternate Text" /></a>

                            <a asp-action="ChangementEtat" asp-route-id="@item.EmployeId"><img class="delete" src="~/trash.svg" alt="Alternate Text" /></a>

                            @*<a asp-action="CongeEmp" asp-route-id="@item.EmployeId"><img class="delete" src="~/airplane-fill.svg" alt="Alternate Text" /></a>*@

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
</fieldset>

<div class="small">
    <nav >
        <ul class="pagination justify-content-end">
            <li class="page-item disabled"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </nav>
</div>


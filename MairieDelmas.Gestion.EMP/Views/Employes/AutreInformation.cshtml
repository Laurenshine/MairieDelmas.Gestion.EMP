@model IEnumerable<MairieDelmas.Gestion.EMP.Models.Employe.Employe>

@{
    ViewData["Title"] = "AutreInformation";
} 
<div class=" bg-primary text-uppercase text-white shadow">
    <img src="~/MD logo png copy.png" width="60" alt="Alternate Text" /> <h2 class="d-inline">Employes Mairie de Delmas</</h2>
</div>

 
<div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link " aria-current="page" asp-action="Recherche">Information Personelles </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="RechercheEmployeActif">Informations Complementaires</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-action="AutreInformation">Autres Informations</a>
        </li>
        <li class="nav-item">
            <a class="nav-link  " asp-action="RechercheDocument">Documents de Dossiers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Promotions" asp-action="Index"> Promotion</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="ListeEmployeInActif">Changement d'Etat</a>
        </li>
    </ul>
</div>

<div class="row  mt-2 ">
    <div class="col-md-8 ml-3">
        <form asp-action="Recherche" method="get">
            <div class="input-group">
                <input type="text" name="Recherche" class="form-control col-4 pl-4" placeholder="No Compte bancaire..." />
                <button type="submit" class="btn btn-outline-light border-0" value="Filter"> <img src="~/search.svg" alt="Alternate Text" /></button>
            </div>
        </form>
    </div>
</div>
  
<fieldset class="border border-primary pt-2 overflow-auto" style="height:450px">
    <legend class="w-auto text-primary">  <a asp-action="Create" class="btn btn-outline-light border-0"><img style="width:40px" src="~/person-plus.svg" alt="Alternate Text" /> </a> </legend>
    <table class="table table-striped table-sm table-hover">
        <thead class="table-primary text-center">
            <tr style="font-size:small">

                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prenom)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Allergies)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Maladies)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remarques)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatederniereVisite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateEntreaLaMairie)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CompteBancaireBNC)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.AutreFormation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EtudeEncour)
                </th>

                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center " style="font-size:small">

                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prenom)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Allergies)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gs)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Maladies)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarques)
                    </td>
                    <td>
                        @{
                            string val1;
                            DateTime da1 = item.DatederniereVisite ;
                            if (da1.Day == 01 && da1.Month == 01 && da1.Year == 0001)
                            {
                                val1 = "";
                            }
                            else
                            {
                                val1 = item.DatederniereVisite.Date.ToShortDateString();
                            }

                        }
                        @val1
                        @*@Html.DisplayFor(modelItem => item.DatederniereVisite)*@
                    </td>

                    <td>
                        @{
                            string val;
                            DateTime da = item.DateEntreaLaMairie;
                            if (da.Day == 01 && da.Month == 01 && da.Year == 0001)
                            {
                                val = "";
                            }
                            else
                            {
                                val = item.DateEntreaLaMairie.Date.ToShortDateString();
                            }

                        }
                        @val
                        @*@Html.DisplayFor(modelItem => item.DateEntreaLaMairie)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompteBancaireBNC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AutreFormation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EtudeEncour)
                    </td>

                    <td>
                        <a asp-action="EnregistrerAutreInformation" asp-route-id="@item.EmployeId"><img class="search " src="~/zoom-in.svg" alt="Alternate Text" /></a>
                        <a asp-action="Details" asp-route-id="@item.EmployeId"><img class="detail" src="~/eye.svg" alt="Alternate Text" /></a>
                        @*<a asp-action="Delete" asp-route-id="@item.EmployeId"><img class="delete" src="~/trash.svg" alt="Alternate Text" /></a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</fieldset>
<div class="small ">
    <nav>
        <ul class="pagination justify-content-end">
            <li class="page-item disabled"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </nav>
</div>
@model IEnumerable<MairieDelmas.Gestion.EMP.Models.Corespondance.Corespondance>

@{
    ViewData["Title"] = "ListeCorespondanceNonSuivie";
}

<div class=" bg-primary text-uppercase text-white shadow">
    <img src="~/MD logo png copy.png" width="60" alt="Alternate Text" /> <h2 class="d-inline">Corespondance </h2>
</div>
<br />
<div class="d-flex mb-1 ">

    <div class="pl-4 pt-2">
        <a asp-action="Create" class="btn btn-outline-light border-0"><img style="width:40px" src="~/envelope-paper-fill.svg" alt="Alternate Text" /> </a>
    </div>
</div>
<div class="row ">
    <div class="col-md-8">
        <form asp-action="ListeCorespondanceNonSuivie" method="Post">
            <div class="input-group">
                <input type="text" name="Recherche" class="form-control col-4" placeholder="Nom/Institution ,Code Cores..." />
                <button type="submit" class="btn btn btn-outline-light border-0" value="Filter"> <img src="~/search.svg" alt="Alternate Text" /></button>
            </div>
        </form>
    </div>
</div>
<br />
<table class="table table-striped table-sm">
    <thead class="table-primary text-center">
        <tr style="font-size:small">
            <th>
                @Html.DisplayNameFor(model => model.CodeCorespondance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomComplet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Institution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Objet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Daterecu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suivi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="font-size:small" class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.CodeCorespondance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomComplet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Institution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Objet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Daterecu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suivi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarque)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CorespondanceId"><img src="~/search.svg" alt="Alternate Text" /></a> |
                    <a asp-action="Details" asp-route-id="@item.CorespondanceId"><img src="~/eye-fill.svg" alt="Alternate Text" /></a> |
                    <a asp-action="Delete" asp-route-id="@item.CorespondanceId"><img src="~/trash.svg" alt="Alternate Text" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<MairieDelmas.Gestion.EMP.Models.Promotion.Promotion>

@{
    ViewData["Title"] = "ListePromotion";
}

<div class=" bg-primary text-uppercase text-white shadow">
    <img src="~/MD logo png copy.png" width="60" alt="Alternate Text" />  <h2 class="d-inline">Employes Mairie de Delmas</h2>
</div>


<div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" aria-current="page" asp-controller="Employes" asp-action="Recherche">Information Personelles</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-controller="Employes" asp-action="RechercheEmployeActif">Informations Complementaires</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Employes" asp-action="AutreInformation">Autres Informations</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Employes" asp-action="RechercheDocument">Documents de Dossiers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-controller="Promotions" asp-action="ListePromotion">Promotion <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger text-white"> @ViewBag.Promotion</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Employes" asp-action="ListeEmployeInActif">Changement d'Etat</a>
        </li>
    </ul>
</div>

<div class="row  mt-2">
    <div class="col-md-8 ml-3">
        <form asp-action="ListePromotion" method="get">
            <div class="input-group">
                <input type="text" name="Recherche" class="form-control col-4 pl-4" placeholder="Service , Poste..." />
                <button type="submit" class="btn btn btn-outline-light border-0 " value="Filter"> <img src="~/search.svg" alt="Alternate Text" /></button>
            </div>
        </form>
    </div>

</div>

<fieldset class="border border-primary pt-2 overflow-auto " style="height:450px">
    <legend class="w-auto text-primary">  <a asp-action="Create" class="btn btn-outline-light border-0"><img style="width:40px" src="~/person-plus.svg" alt="Alternate Text" /> </a> </legend>
    <table class="table table-striped  table-sm table-hover">
        <thead class="table-primary text-center">
            <tr style="font-size:small">
                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prenom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NifCIn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AncienPoste)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AncienService)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NouveauPoste)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NouveauService)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatePromotion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RemarquePromotion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr  class="text-center" style="font-size:small">
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prenom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NifCIn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AncienPoste)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AncienService)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NouveauPoste)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NouveauService)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatePromotion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RemarquePromotion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PromotionId"><img src="~/search.svg" alt="Alternate Text" /></a> 
                        <a asp-action="Details" asp-route-id="@item.PromotionId"><img src="~/eye.svg" alt="Alternate Text" /></a> 
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </fieldset>